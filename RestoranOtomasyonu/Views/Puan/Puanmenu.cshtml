@using RestoranOtomasyonu.Models
@model List<urunler>
@{
    ViewData["Title"] = "Puanmenu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="food_section layout_padding">
    <div class="container">
        <a href="@Url.Action("PuanSorgula","Puan")" class="btn btn-warning">Puanınızı Sorgulamak İçin Tıklayınız</a>
        <div class="heading_container heading_center">
            <h2 class="Baslik">
            </h2>
        </div>
        <div class="row">
            @foreach (var item in ViewBag.urunler)
            {
                
                    <div class="col-md-4">
                        <div class="box">
                            <div class="img-box">
                                <img src="@item.ResimYap" alt="">
                            </div>
                            <div class="detail-box">
                                <h5>
                                    @item.UrunAD
                                </h5>
                                <div class="options">
                                    <h6>
                                        @item.Puan Puan
                                    </h6>
                                </div>
                            </div>
                        </div>
                    </div>
                
            }
        </div>
    </div>
</section>
