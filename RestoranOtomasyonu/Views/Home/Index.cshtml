                <li class="active" data-filter="*">All</li>
                @foreach (var kategori in Model.kategoris)
                {
                    <li data-filter=".kategori-@kategori.KategoriID">@kategori.KategoriAd</li>
                }
            </ul>

            <div class="filters-content">
                <div class="row grid">
                    @for (int i = 0; i < Math.Min(3, Model.Urunler.Count); i++)
                    {
                        var urun = Model.Urunler[i];
                        <div class="col-sm-6 col-lg-4 All kategori-@urun.KategoriID">
                            <div class="box">
                                <div class="img-box">
                                    <img src="@urun.ResimYap" alt="">
                                </div>

                                <div class="detail-box">
                                    <h5>
                                        @urun.UrunAD
                                    </h5>
                                    <p>
                                        @foreach (var icerik in Model.Icerikler)
                                        {
                                            if (icerik.urunlerID == urun.UrunID)
                                            {
                                                <span class="icerik-item">@icerik.IcerikAD</span>
                                            }
                                        }
                                    </p>
                                    <div class="options">
                                        <h6>
                                            @urun.UrunFiyat TL
                                        </h6>
                                    </div>
                                    @* MASAID Si zaten COOKİE içerisinde Mevcut. Cookie den MASAID sini aşağıya yazdır. *@
                                    <a href="@Url.Action("Sepetim", "Home", new { UrunId = urun.UrunID, MasaId=1})">
                                        <img src="/images/sepet1.png" width="16px" height="16px" />
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
