@model List<hakkinda>
@{
    ViewData["Title"] = "Hakkinda";

    Layout = "_Layout";
}

<section class="about_section layout_padding">
    <div class="container-lg">
        <div class="row">
                <div class="col-md-6 ">
                    <div class="img-box">
                        <img src="/images/about-img.png" alt="">
                    </div>
                </div>         
                @foreach (var item in Model)
                {
                    <div class="col-md-6">
                        <div class="detail-box">
                            <div class="heading_container">
                                <h2 class="Baslik">
                                    @item.Baslik
                                </h2>
                            </div>
                            <p>
                               @item.Aciklama
                            </p>
                            <a href="">
                                Read More
                            </a>
                        </div>
                    </div>
                }
        </div>
    </div>
    </section>

