@model IEnumerable<RestoranOtomasyonu.Models.urunler>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/YönetimPaneli/Views/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.kategori)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrunAD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrunFiyat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResimYap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.puandurum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.kategori.KategoriID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrunAD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrunFiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResimYap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.puandurum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Puan)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.UrunID">Edit</a> |
                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.UrunID">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.UrunID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
