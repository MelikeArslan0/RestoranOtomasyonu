<body>
    <div class="main-wrapper">
        <!-- Content Body Start -->
        <div class="content-body m-0 p-0">
            <div class="login-register-wrap">
                <div class="row">
                    <div class="d-flex align-self-center justify-content-center order-2 order-lg-1 col-lg-5 col-12">
                        <div class="login-register-form-wrap">
                            <div class="content">
                                <h1>Giriş Yap</h1>
                                <p>Giriş yapmak için bilgilerininizi giriniz.</p>
                            </div>
                            <div class="login-register-form">
                                <form action="~/YönetimPaneli/Login/Login" method="post">
                                    <div class="row">
                                        <div class="col-12 mb-20"><input class="form-control" name="KUnvan" type="text" placeholder="Kullanıcı Adı"></div>
                                        <div class="col-12 mb-20"><input class="form-control" name="KTC" type="password" placeholder="Şifre"></div>
                                        <div class="col-12 mb-20"><label for="remember" class="adomx-checkbox-2"><input id="remember" type="checkbox"><i class="icon"></i>Beni Hatırla</label></div>

                                        <div class="col-12 mt-10"><button class="button button-primary button-outline" action="/YönetimPaneli/Admin/Index" method="post">Giriş</button></div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="login-register-bg order-1 order-lg-2 col-lg-7 col-12">
                        <div class="content">
                            <h1>Giriş Yap</h1>
                            <p>Giriş yapmak için bilgilerininizi giriniz.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/assets/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="/assets/js/vendor/jquery-3.3.1.min.js"></script>
    <script src="/assets/js/vendor/popper.min.js"></script>
    <script src="/assets/js/vendor/bootstrap.min.js"></script>
    <!--Plugins JS-->
    <script src="/assets/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="/assets/js/plugins/tippy4.min.js.js"></script>
    <!--Main JS-->
    <script src="/assets/js/main.js"></script>
</body>
</html>
