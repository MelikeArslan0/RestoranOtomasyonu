@model IEnumerable<RestoranOtomasyonu.Models.icerik>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/YönetimPaneli/Views/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a class="btn btn-warning" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IcerikAD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.urunler)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IcerikAD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.urunler.UrunID)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.IcerikID">Edit</a> |
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.IcerikID">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IcerikID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
